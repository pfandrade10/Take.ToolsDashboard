@model Take.UI.MVC.ToolsDashboard.Models.Tool



    @{ ViewData["Title"] = $"Remover Frramenta #{Model.name}"; }
    <div class="white-body">
        <h3>Você está certo que quer remover esta ferramenta?</h3>
        <div>
            <div class="row">
                <div class="col-12">
                    <strong>Nome:</strong> @Model.name
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <strong>link:</strong> @Model.link
                </div>
            </div>

            <form asp-action="Excluir" method="post" asp-antiforgery="true">
                <input type="hidden" asp-for="idTool" />
                <button class="btn btn-danger" type="submit">Sim, Deletar</button>
            </form>
        </div>
        <br />

        <div>
            <a asp-action="Index" asp-controller="Tool" role="button" class="btn btn-outline-dark"><span class="fas fa-arrow-left"></span> Voltar</a>
        </div>
    </div>

    @section Scripts{
        <script type="text/javascript">
            //Setando menu como ativo
            SetActiveLink("#link-menu-tool");

        </script>
    }


