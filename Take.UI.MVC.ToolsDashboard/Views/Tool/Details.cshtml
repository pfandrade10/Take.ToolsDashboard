@model Take.UI.MVC.ToolsDashboard.Models.Tool
@{
    ViewData["Title"] = $"Detalhes da Frramenta #{Model.name}";
}

<div>
    <table>
        <tbody>
            <tr class="dl-horizontal">

                <th>
                    <div class="col-md-12 col-8">
                        <label>ID do Usuário</label>
                    </div>
                </th>
                <td>
                    <div class="col-md-12 col-8">
                        @Model.idTool
                    </div>
                </td>
            </tr>
            <tr>
                <th>
                    <div class="col-md-12 col-8">
                        <label>Nome</label>
                    </div>
                </th>
                <td>
                    <div class="col-md-12 col-8">
                        @Model.name
                    </div>
                </td>
            </tr>
            <tr>
                <th>
                    <div class="col-md-12 col-8">
                        <label>Descrição</label>
                    </div>
                </th>
                <td>
                    <div class="col-md-12 col-8">
                        @Model.description
                    </div>
                </td>
            </tr>
            <tr>
                <th>
                    <div class="col-md-12 col-8">
                        <label>Link</label>
                    </div>
                </th>
                <td>
                    <div class="col-md-12 col-8">
                        @Model.link
                    </div>
                </td>
            </tr>
            <tr>
                <th>
                    <div class="col-md-12 col-8">
                        <label>Data Inclusão</label>
                    </div>
                </th>
                <td>
                    <div class="col-md-12 col-8">
                        @Model.dateTimeInclusion
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<br />

<div>
    <a asp-action="Index" asp-controller="Tool" role="button" class="btn btn-outline-dark"><span class="fas fa-arrow-left"></span> Voltar</a>
</div>

@section Scripts{
    <script type="text/javascript">
        //Setando menu como ativo
        SetActiveLink("#link-menu-tool");

    </script>
}


