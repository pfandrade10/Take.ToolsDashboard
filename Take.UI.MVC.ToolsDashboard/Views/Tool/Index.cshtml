@model Take.UI.MVC.ToolsDashboard.Models.Tool
@{ ViewData["Title"] = "Ferramentas"; }

<form asp-action="Index" method="post" asp-antiforgery="true">
    <div class="form-group">
        <input name="searchText" placeholder="Pesquisar" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn  btn-outline-dark">Pesquisar</button>
    </div>
</form>

<div class="card-list">
    <div class="row">
        @foreach (var item in ViewBag.listTools as List<Tool>)
        {
            <div class="card-item">
                <div class="infos">
                    <span class="primary">Nome: @item.name</span>
                    <span class="secundary">base Url: @item.baseUrl</span>
                    <span class="secundary-status last-info">@(item.isActive?"Ativo":"Inativo")</span>
                </div>
                <div class="actions">
                    <a asp-action="Details" asp-route-idTool="@item.idTool"><span class="fas fa-eye"></span></a>
                    <a asp-action="Delete" asp-route-idTool="@item.idTool"><span class="fas fa-trash"></span></a>
                </div>
            </div>
         }
    </div>
</div>


<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">
        <span class="fas fa-arrow-left"></span> Voltar
    </a>
</div>

@section Scripts{
    <script type="text/javascript">
        //Setando menu como ativo
        SetActiveLink("#link-menu-tool");

    </script>
}