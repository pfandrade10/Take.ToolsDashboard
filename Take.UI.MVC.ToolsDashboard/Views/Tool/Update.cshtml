@model Take.UI.MVC.ToolsDashboard.Models.Tool
@{
    ViewData["Title"] = $"Detalhes da Frramenta #{Model.name}";
}

<form asp-action="Update" method="post" asp-antiforgery="true">
    <input type="hidden" asp-for="idTool" value="@Model.idTool" />
    <div class="form-group">
        <input asp-for="name" value="@Model.name" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="description" value="@Model.description" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="link" value="@Model.link" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="baseUrl" value="@Model.baseUrl" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="isActive" value="@Model.link" name="isActiveRadio" type="radio" class="form-control" /> Ativo
        <input asp-for="isActive" value="@Model.link" name="isActiveRadio" type="radio" class="form-control" /> Inativo
    </div>
    <div>
        <button type="submit" class="btn  btn-outline-dark">Salvar</button>
    </div>
</form>
<br />

<div>
    <a asp-action="Index" asp-controller="Tool" role="button" class="btn btn-outline-dark"><span class="fas fa-arrow-left"></span> Voltar</a>
</div>

@section Scripts{
    <script type="text/javascript">
        //Setando menu como ativo
        SetActiveLink("#link-menu-tool");

    </script>
}


