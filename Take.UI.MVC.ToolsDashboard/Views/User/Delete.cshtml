@model Take.UI.MVC.ToolsDashboard.Models.User
@{ ViewData["Title"] = $"Remover Usuário #{Model.userName}"; }

<div class="white-body">
    <h3>Você está certo que quer remover este usuário?</h3>
    <div>
        <div class="row">
            <div class="col-12 col-sm-6 col-md-6 col-lg-4">
                <strong>Nome:</strong> @Model.userName
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6 col-md-6 col-lg-4">
                <strong>email:</strong> @Model.email
            </div>
        </div>

        <form asp-action="Excluir" method="post" asp-antiforgery="true">
            <input type="hidden" asp-for="idUser" />
            <button class="btn btn-danger" type="submit">Sim, Deletar</button>
        </form>
    </div>
    <br />

    <div>
        <a asp-action="Index" asp-controller="User" role="button" class="btn btn-outline-dark"><span class="fas fa-arrow-left"></span> Voltar</a>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        //Setando menu como ativo
        SetActiveLink("#link-menu-user");

    </script>
}


