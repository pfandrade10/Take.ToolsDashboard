@model Take.UI.MVC.ToolsDashboard.Models.User
@{ ViewData["Title"] = "Usuários"; }

<div class="white-body">
    <form asp-action="Index" method="post" asp-antiforgery="true">
        <div class="row">
            <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                <div class="form-group">
                    <input name="searchText" placeholder="Pesquisar" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6 col-md-2 col-lg-2">
                <div class="form-group">
                    <select class="custom-select" name="isActive">
                        <option value="">Todos</option>
                        <option value="true">Ativo</option>
                        <option value="false">Inativo</option>
                    </select>
                </div>
            </div>
            <div class="col-12 col-sm-2 col-md-2 col-lg-2">
                <button type="submit" class="btn btn-outline-dark">Pesquisar</button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-md-3">
            <a style="margin-top: 10px" asp-action="Create" class="btn btn-outline-dark">Adicionar Usuário</a>
        </div>
    </div>
    <div class="card-list">
        <div class="row">
            @foreach (var item in ViewBag.listUser as List<Take.UI.MVC.ToolsDashboard.Models.User>)
            {
                <div class="card-item">
                    <div class="infos">
                        <span class="primary">Nome: @item.userName</span>
                        <span class="secundary">email: @item.email</span>
                        <span class="secundary-status last-info">@(item.isActive?"Ativo":"Inativo")</span>
                    </div>
                    <div class="actions">
                        <a asp-action="Update" asp-route-idUser="@item.idUser"><span style="margin-top:5px" class="fas fa-eye"></span></a>
                        <a asp-action="Delete" asp-route-idUser="@item.idUser"><span style="margin-top:5px" class="fas fa-trash"></span></a>
                    </div>
                </div>            
            }
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">
            <span class="fas fa-arrow-left"></span> Voltar
        </a>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        //Setando menu como ativo
        SetActiveLink("#link-menu-user");

    </script>
}
