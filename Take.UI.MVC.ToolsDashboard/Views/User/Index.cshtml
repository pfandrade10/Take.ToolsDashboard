@model Take.UI.MVC.ToolsDashboard.Models.User
@{ ViewData["Title"] = "Usuários"; }

<div class="card-list">
    <div class="row">
        @foreach (var item in ViewBag.listUser as List<Take.UI.MVC.ToolsDashboard.Models.User>)
        {
            <div class="card-item">
                <div class="infos">
                    <span class="primary">Nome: @item.userName</span>
                    <span class="secundary">email: @item.email</span>
                    <span class="secundary-status last-info">@(item.isActive?"Ativo":"Inativo")</span>
                </div>
                <div class="actions">
                    <a asp-action="Details" asp-route-id="@item.idUser"><span class="fas fa-user"></span></a>
                </div>
            </div>
         }
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">
        <span class="fas fa-arrow-left"></span> Voltar
    </a>
</div>

@section Scripts{
    <script type="text/javascript">
        //Setando menu como ativo
        SetActiveLink("#link-menu-user");

    </script>
}